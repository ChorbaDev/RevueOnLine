import java.sql.*;
public class Metier.Revue {
	private String titre;
	private String description;
	private double tarif_numero;
	private String visuel;
	private int id_p;
	private int id=0;
	
	private Metier.Connexion maConnexion;
	private  Connection connect;
	
	public Metier.Revue(String titre, String description, double tarif_numero, String visuel,int id_p) {
		this.titre = titre;
		this.description = description;
		this.tarif_numero = tarif_numero;
		this.visuel = visuel;
		this.id_p=id_p;
		
		maConnexion= new Metier.Connexion();
	    connect=maConnexion.creeConnexion();
	}
	public void addRevue() throws SQLException {
		String sql="insert into Metier.Revue(titre,description,tarif_numero,visuel,id_periodicite) values (?,?,?,?,?)";
		PreparedStatement requete=connect.prepareStatement(sql,Statement.RETURN_GENERATED_KEYS);
		requete.setString(1,this.titre );
		requete.setString(2,this.description );
		requete.setDouble(3, this.tarif_numero);
		requete.setString(4,this.visuel );
		requete.setInt(5,this.id_p );
		int nbLignes=requete.executeUpdate();
		ResultSet res=requete.getGeneratedKeys();
		if(res.next()) {
			id=res.getInt(1);
		}
	}
	public void deleteRevue(int x) throws SQLException {
		String sql="delete from Metier.Revue where id_revue=?";
		PreparedStatement requete=connect.prepareStatement(sql);
		requete.setInt(1,x );
		int nbLignes=requete.executeUpdate();
	}
	public void updateRevue() throws SQLException {
		String sql="";
		PreparedStatement requete=connect.prepareStatement(sql);
		requete.setString(1,this.titre );
		requete.setString(2,this.description );
		requete.setDouble(3, this.tarif_numero);
		requete.setString(4,this.visuel );
		int nbLignes=requete.executeUpdate();
	}
}
